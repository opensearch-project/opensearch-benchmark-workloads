{% macro set_target_throughput(default) -%}
{%- if not target_throughput %}
,"target-throughput": {{ default }}
{%- elif target_throughput is string and target_throughput.lower() == 'none' %}
{%- else %}
,"target-throughput": {{ target_throughput | tojson }}
{%- endif %}
{%- endmacro %}

{% macro set_search_clients() -%}
{%-if search_clients is defined and search_clients %}
,"clients": {{ search_clients | tojson }}
{%- endif %}
{%- endmacro %}

    {
      "name": "searchable_snapshot",
      "description": "Measuring performance for Searchable Snapshot feature",
      "default": true,
      "schedule": [
        {
          "operation": "delete-index"
        },
        {
          "operation": {
            "operation-type": "create-index",
            "settings": {%- if index_settings is defined %} {{ index_settings | tojson }} {%- else %} {
              "index.codec": "best_compression",
              "index.refresh_interval": "30s",
              "index.translog.flush_threshold_size": "4g"
            }{%- endif %}
          }
        },
        {
          "name": "check-cluster-health",
          "operation": {
            "operation-type": "cluster-health",
            "index": "nyc_taxis",
            "request-params": {
              "wait_for_status": "{{ cluster_health | default('green') }}",
              "wait_for_no_relocating_shards": "true"
            },
            "retry-until-success": true
          }
        },
        {
          "operation": "index",
          "warmup-time-period": 240,
          "clients": {{ bulk_indexing_clients | default(8) }},
          "ignore-response-error-level": "{{ error_level | default('non-fatal') }}"
        },
        {
          "operation": "create-snapshot-repository"
        },
        {
          "operation": "create-snapshot"
        },
        {
          "operation": "wait-for-snapshot-create"
        },
        {
          "operation": {
            "name": "delete-local-index",
            "operation-type": "delete-index"
          }
        },
        {
          "operation": "restore-snapshot"
        },
        {
          "operation": "default",
          "warmup-iterations": 50,
          "iterations": 100
          {{ set_target_throughput(3) }}
          {{ set_search_clients() }}
        },
        {
          "operation": "range",
          "warmup-iterations": 50,
          "iterations": 100
          {{ set_target_throughput(0.7) }}
          {{ set_search_clients() }}
        },
        {
          "operation": "distance_amount_agg",
          "warmup-iterations": 50,
          "iterations": 100
          {{ set_target_throughput(2) }}
          {{ set_search_clients() }}
        },
        {
          "operation": "autohisto_agg",
          "warmup-iterations": 50,
          "iterations": 100
          {{ set_target_throughput(1.5) }}
          {{ set_search_clients() }}
        },
        {
          "operation": "date_histogram_agg",
          "warmup-iterations": 50,
          "iterations": 100
          {{ set_target_throughput(1.5) }}
          {{ set_search_clients() }}
        }
      ]
    }

