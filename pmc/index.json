{
  "settings": {
    "index.number_of_shards": {{number_of_shards | default(5)}},
    "index.number_of_replicas": {{number_of_replicas | default(0)}},
    "index.requests.cache.enable": false
  },
  "mappings": {
    "_source": {
      "enabled": {{ source_enabled | default(true) | tojson }}
    },
    "dynamic": "strict",
    "properties": {
      "name": {
        "type": "keyword",
        "index": true,
        "doc_values": false,
        "copy_to": ["name_docvalues", "name_indexordocvalues"]
      },
      "name_docvalues": {
        "type": "keyword",
        "index": false,
        "doc_values": true
      },
      "name_indexordocvalues": {
        "type": "keyword",
        "index": true,
        "doc_values": true
      },
      "journal": {
        "type": "text"
      },
      "date": {
        "type": "text"
      },
      "volume": {
        "type": "text"
      },
      "issue": {
        "type": "text"
      },
      "accession": {
        "type": "keyword"
      },
      "timestamp": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss"
      },
      "pmid": {
        "type": "integer"
      },
      "body": {
        "type": "text"
      }
    }
  }
}
