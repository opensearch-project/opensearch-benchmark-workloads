{
  "name": "hybrid-search-complex-aggs-with-search-pipeline",
  "operation-type": "search",
  "param-source": "neural-hybrid-search-complex-source",
  "index": "{{ index_name }}",
  "request-params": {
    "search_pipeline": "nlp-search-pipeline"
  },
  "variable-queries": {{variable_queries | default(0)}},
  "body": {
    "_source": {
     "excludes": [
       "passage_embedding"
     ]
    },
    "size": {{hybrid_query_size | default(10)}},
    "query": {
      "hybrid": {
        "queries": [
         {
           "match_phrase": {
             "text": {
               "query": "What are some of the best science projects?",
               "boost": 3.0,
               "slop": 2
             }
           }
         },
         {
           "match": {
             "text": {
               "query": "What are some of the best science projects?",
               "operator": "or",
               "fuzziness": "AUTO",
               "boost": 2.0
             }
           }
         },
         {
           "neural": {
             "passage_embedding": {
               "query_text": "What are some of the best science projects?",
               "model_id": "",
               "k": {{ k | default(10)}}
             }
           }
         }
        ]
      }
    },
    "aggs": {
       "sample": {
         "sampler": {
           "shard_size": 1000
         },
         "aggs": {
           "term_count": {
             "terms": {
               "field": "text",
               "size": 10
             }
           }
         }
       },
       "text_filters": {
         "filters": {
           "filters": {
             "stock_related": {
               "match": {
                 "text": "stock"
               }
             },
             "trading_related": {
               "match": {
                 "text": "trading"
               }
             }
           }
         }
       }
    }
  }
},
