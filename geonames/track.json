          "clients": 1,
          "warmup-iterations": 500,
          "iterations": 1000,
          "target-throughput": 200
        },
        {
          "operation": "phrase",
          "clients": 1,
          "warmup-iterations": 500,
          "iterations": 1000,
          "target-throughput": 200
        },
        {
          "operation": "country_agg_uncached",
          "clients": 1,
